<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.shopify.testify.sample">

    <application
        android:allowBackup="true"
        android:fullBackupContent="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <!--suppress AndroidDomInspection -->
        <activity android:name="com.shopify.testify.ext.TestHarnessActivity" />
        <activity android:name="com.shopify.testify.sample.test.TestLocaleHarnessActivity" />
        <activity android:name="com.shopify.testify.sample.test.TestLocaleHarnessNoWrapActivity" />
        <activity
            android:name=".clients.details.ClientDetailsActivity"
            android:parentActivityName=".clients.index.ClientListActivity" />
        <activity
            android:name=".clients.index.ClientListActivity"
            android:label="@string/title_activity_client"
            android:parentActivityName=".MainActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>